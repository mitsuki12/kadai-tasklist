<%= form_for(task) do |f| %>
 <div class="row">
      <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-sm-8 col-lg-offset-3 col-sm-6"></div>

    </div>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status, class: "form-control"  %>
   

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content, class: "form-control" %>
 

<%= f.submit '投稿', class: 'btn btn-primary' %>

  
<% end %>

